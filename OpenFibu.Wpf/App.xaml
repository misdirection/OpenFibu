<Application x:Class="OpenFibu.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenFibu.Wpf"
             xmlns:gv="clr-namespace:OpenFibu.Wpf.Geschaeftsvorfall"
             xmlns:stamm="clr-namespace:OpenFibu.Wpf.Stammdaten"
             xmlns:buchung="clr-namespace:OpenFibu.Wpf.Buchung">
    <Application.Resources>
        <DataTemplate DataType="{x:Type gv:GeschaeftsvorfallerfassungViewModel}">
            <gv:GeschaeftsvorfallerfassungView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type gv:GeschaeftsvorfaelleViewModel}">
            <gv:GeschaeftsvorfaelleView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type buchung:BuchungserfassungViewModel}">
            <buchung:BuchungserfassungView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type stamm:SteuerschluesselViewModel}">
            <stamm:SteuerschluesselView/>
        </DataTemplate>
    </Application.Resources>
</Application>
