<UserControl x:Class="OpenFibu.Wpf.Vorkontierung.VorkontierungView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenFibu.Wpf.Vorkontierung"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DataGrid ItemsSource="{Binding Geschaeftsvorfaelle}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Belegnummer" Binding="{Binding Belegnummer}" />
                <DataGridTextColumn Header="Belegdatum" Binding="{Binding Belegdatum}" />
                <DataGridTextColumn Header="Buchungsdatum" Binding="{Binding Buchungsdatum}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Grid>
                        <DataGrid ItemsSource="{Binding Buchungen}" />
                    </Grid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Speichern" Command="{Binding SpeichernCommand}"/>
            <Button Content="Buchen" Command="{Binding BuchenCommand}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Belegnummer" />
            <TextBox Text="{Binding Belegnummer, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="100" />
            <Label Content="Belegdatum" />
            <DatePicker SelectedDate="{Binding Belegdatum, Mode=TwoWay}" Width="100"/>
            <Label Content="Buchungsdatum" />
            <DatePicker SelectedDate="{Binding Buchungsdatum, Mode=TwoWay}" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="130" Content="Soll" />
            <TextBox Text="{Binding Soll, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="130" Content="Haben" />
            <TextBox Text="{Binding Haben, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="130" Content="Steuerschlüssel" />
            <TextBox Text="{Binding Steuerschluessel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="130" Content="Betrag" />
            <TextBox Text="{Binding Betrag, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="100" />
        </StackPanel>            <StackPanel Orientation="Horizontal">
            <Label Width="130" Content="Buchungstext" />
            <TextBox Text="{Binding Buchungstext, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="450" />
        </StackPanel>    </StackPanel>
</UserControl>
