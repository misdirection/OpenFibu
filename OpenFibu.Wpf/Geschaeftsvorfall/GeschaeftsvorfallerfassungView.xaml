<UserControl x:Class="OpenFibu.Wpf.Geschaeftsvorfall.GeschaeftsvorfallerfassungView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenFibu.Wpf.Geschaeftsvorfall"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Belegnummer" />
                <TextBox Text="{Binding Belegnummer, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="100" />
                <Label Content="Belegdatum" />
                <DatePicker SelectedDate="{Binding Belegdatum, Mode=TwoWay}" Width="100"/>
                <Label Content="Buchungsdatum" />
                <DatePicker SelectedDate="{Binding Buchungsdatum, Mode=TwoWay}" Width="100" />
            </StackPanel>
            <ContentControl Content="{Binding BuchungserfassungViewModel}" />
            <StackPanel Orientation="Horizontal">
                <Label Width="130" Content="Buchungstext" />
                <TextBox Text="{Binding Buchungstext, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" Width="450" />

            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
